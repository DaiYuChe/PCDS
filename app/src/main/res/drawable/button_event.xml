<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:endColor="#66c358" android:startColor="#66c358"></gradient>
            <stroke android:width="5dp" android:color="#ffff00"></stroke>
            <corners android:radius="5dp"></corners>
            <padding android:bottom="10dp" android:left="10dp"
                android:right="10dp" android:top="10dp"></padding>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:endColor="#c7b9b9" android:startColor="#c7b9b9"></gradient>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>

</selector>