<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user01.gcmtest.MainActivity"
    android:background="#e7f9f6"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="蜂鳴器"
        android:id="@+id/buzzer"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_event"
        android:onClick="buzzer" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="系統重新開機/關機"
        android:id="@+id/SystemState"
        android:layout_below="@+id/buzzer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_event"
        android:onClick="SystemState" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LED"
        android:id="@+id/control_led"
        android:background="@drawable/button_event"
        android:onClick="control_led"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/SystemState" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="撥放音樂"
        android:id="@+id/playMusic"
        android:layout_below="@+id/control_led"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_event"
        android:onClick="playMusic" />

</RelativeLayout>
